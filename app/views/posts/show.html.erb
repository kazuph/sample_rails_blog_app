<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<p>
  <b>comments:</b>
  <%= @post.comments.each do |comment| %>
    <p>
    <%= "#{comment.comment} by #{comment.name}"%>
    </p>
  <% end %>
</p>

<hr>
<%= render @post.comments.build%>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
